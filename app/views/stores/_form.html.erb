<%= simple_form_for(store) do |f| %>
  <% if current_user.organizations.present? %>
    <%= f.input :organization_id,
      collection: current_user.organizations.map { |organization|
        [organization.name, organization.id]
      },
      class: 'dropdown'
    %>
  <% end %>
  <%= f.input :name %>
  <%= f.button :submit, 'Submit' %>
<% end %>
