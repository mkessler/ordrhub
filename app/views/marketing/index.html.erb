<div class="ui inverted vertical masthead center aligned segment pt2">
  <div class="ui container">
    <div class="ui large secondary inverted pointing menu">
      <div class="hidden-xs-up">
        <a class="toc item">
          <i class="large sidebar icon"></i>
        </a>
        <a class="active item">Home</a>
        <a class="item">Demo</a>
      </div>
      <div class="right item">
        <%= link_to 'Log in', new_session_path(resource_name), class: 'ui inverted button' %>
