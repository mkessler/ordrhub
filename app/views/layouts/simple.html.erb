<!DOCTYPE html>
<html>
  <head>
    <%= render partial: 'layouts/google_analytics' %>
    <title>OrdrHub</title>
    <%= csrf_meta_tags %>
    <%= render partial: 'layouts/favicons' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="sticky-footer-body pt4">
    <div class="ui fixed inverted menu" style="border-radius: 0;">
      <div class="ui container">
        <a href="/" class="header item">
          <%= image_tag 'logo/inverted-logo.png', class: 'ui mini image mr1' %>
          <span class="hidden-sm-down">OrdrHub</span>
        </a>
        <% if user_signed_in? %>
          <div class="ui right floated simple dropdown item">
            <span class="hidden-sm-down">
              <%= user_display_name %>
            </span>
            <span class="hidden-md-up">
              <i class="user icon"></i>
            </span>
            <i class="dropdown icon"></i>
            <div class="menu">
              <%= link_to('Logout', destroy_user_session_path, class: 'item', method: :delete) %>
            </div>
          </div>
        <% else %>
          <div class="right item py1 float-container">
            <%= link_to 'Log in', new_session_path(resource_name), class: 'ui inverted button mr1' %>
            <%= link_to 'Sign up', new_registration_path(resource_name), class: 'ui primary button' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="ui main text container sticky-footer-content mt2">
      <%= yield %>
    </div>

    <div class="ui inverted vertical footer segment mt3">
      <div class="ui center aligned container">
        <div class="ui horizontal inverted small divided link list">
          <a class="item" href="mailto:ordrhub@gmail.com">Contact Us</a>
          <a class="item" href="#">Terms &amp; Conditions</a>
          <a class="item" href="/privacy_policy">Privacy Policy</a>
          <a class="item" href="#">Site Map</a>
        </div>
      </div>
    </div>
  </body>
</html>
